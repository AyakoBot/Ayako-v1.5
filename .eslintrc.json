{
    "settings": {
    "import/resolver": {
        "node": {
            "extensions": [".js", ".jsx", ".ts", ".tsx"],
                "paths": ["./"]
        }
    }
},
    "env": {
    "browser": true,
        "es2021": true
},
    "extends": [
    "airbnb-base"
],
    "parserOptions": {
    "ecmaVersion": 12
},
    "rules": {
    "linebreak-style": [0, 0],
    "indent": ["warn", 2],
        "import/extensions": [
        "error",
        "ignorePackages",
        {
            "js": "never",
            "jsx": "never",
            "ts": "never",
            "tsx": "never"
        }
    ],
        "no-use-before-define": "off",
        "no-console": "off",
        "no-bitwise": "off",
        "import/prefer-default-export": "off",
        "camelcase": "off"
}
}